<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent">
                
                <TextView android:id ="@+id/market"
                          android:layout_height="wrap_content"
                          android:layout_width="wrap_content"
                          android:layout_alignParentTop="true"
                          android:text="Market: "
                          />          
                <TextView android:id ="@+id/market_name"
                          android:layout_height="wrap_content"
                          android:layout_width="wrap_content"
                          android:layout_toRightOf="@+id/market"
                          android:text="Market Name"
                          />
                <TextView android:id ="@+id/crop"
                          android:layout_height="wrap_content"
                          android:layout_width="wrap_content"
                          android:layout_below="@+id/market"
                          android:text="Crop: "
                          />
                <TextView android:id ="@+id/crop_name"
                          android:layout_height="wrap_content"
                          android:layout_width="wrap_content"
                          android:layout_below="@+id/market_name"
                          android:layout_toRightOf="@+id/crop"
                          android:text="Crop Name"
                          />
                <TextView android:id ="@+id/quantity"
                          android:layout_height="wrap_content"
                          android:layout_width="wrap_content"
                          android:layout_below="@+id/crop"
                          android:text="Quantity: "
                          />
                <TextView android:id ="@+id/quantity_value"
                          android:layout_height="wrap_content"
                          android:layout_width="wrap_content"
                          android:layout_toRightOf="@+id/quantity"
                          android:layout_below="@+id/crop_name"
                          android:text="Quantity Value"
                          />
                <TextView android:id ="@+id/kg_price"
                          android:layout_height="wrap_content"
                          android:layout_width="wrap_content"
                          android:layout_below="@+id/quantity"
                          android:text="Price: "
                          />
                <TextView android:id ="@+id/kg_price_value"
                          android:layout_height="wrap_content"
                          android:layout_width="wrap_content"
                          android:layout_toRightOf="@+id/kg_price"
                          android:layout_below="@+id/quantity_value"
                          android:text="Price Value"
                          />
                <TextView android:id ="@+id/total"
                          android:layout_height="wrap_content"
                          android:layout_width="wrap_content"
                          android:layout_below="@+id/kg_price"
                          android:text="Total: "
                          />
                <TextView android:id ="@+id/total_value"
                          android:layout_height="wrap_content"
                          android:layout_width="wrap_content"
                          android:layout_below="@+id/kg_price_value"
                          android:layout_toRightOf="@+id/total"
                          android:text="Total Value"
                          />
                <TextView android:id ="@+id/transport"
                          android:layout_height="wrap_content"
                          android:layout_width="wrap_content"
                          android:layout_below="@+id/total"
                          android:text="Transport: "
                          />
                <TextView android:id ="@+id/transport_value"
                          android:layout_height="wrap_content"
                          android:layout_width="fill_parent"
                          android:layout_below="@+id/total_value"
                          android:layout_toRightOf="@+id/transport"
                          android:text="Transport Value"
                          />
                <TextView android:id ="@+id/transaction_fee"
                          android:layout_height="wrap_content"
                          android:layout_width="fill_parent"
                          android:layout_below="@+id/transport"
                          android:text="Transaction Fee: "
                          />
                <TextView android:id ="@+id/transaction_fee_value"
                          android:layout_height="wrap_content"
                          android:layout_width="fill_parent"
                          android:layout_below="@+id/transaction_fee"
                          android:text="Transaction Fee Value"
                          />
                <TextView android:id ="@+id/line"
                          android:layout_height="wrap_content"
                          android:layout_width="fill_parent"
                          android:layout_below="@+id/transaction_fee"
                          android:text=".................."
                          />
                <TextView android:id ="@+id/farmer"
                          android:layout_height="wrap_content"
                          android:layout_width="wrap_content"
                          android:layout_below="@+id/line"
                          android:text="Farmer: "
                          />
                <TextView android:id ="@+id/farmer_value"
                          android:layout_height="wrap_content"
                          android:layout_width="wrap_content"
                          android:layout_below="@+id/line"
                          android:layout_toRightOf="@+id/farmer"
                          android:text="Farmer Value"
                          />
                <TextView android:id ="@+id/identifier"
                          android:layout_height="wrap_content"
                          android:layout_width="wrap_content"
                          android:layout_below="@+id/farmer"
                          android:text="ID: "
                          />
                <TextView android:id ="@+id/identifier_value"
                          android:layout_height="wrap_content"
                          android:layout_width="wrap_content"
                          android:layout_toRightOf="@+id/identifier"
                          android:layout_below="@+id/farmer_value"
                          android:text="ID Value"
                          />
                <TextView android:id ="@+id/quantity2"
                          android:layout_height="wrap_content"
                          android:layout_width="wrap_content"
                          android:layout_below="@+id/identifier"
                          android:text="Quantity: "
                          />
                <TextView android:id ="@+id/quantity2_value"
                          android:layout_height="wrap_content"
                          android:layout_width="wrap_content"
                          android:layout_below="@+id/identifier_value"
                          android:layout_toRightOf="@+id/quantity2"
                          android:text="Quantity Value"
                          />
                <TextView android:id ="@+id/revenue"
                          android:layout_height="wrap_content"
                          android:layout_width="wrap_content"
                          android:layout_below="@+id/quantity2"
                          android:text="Revenue: "
                          />
                <TextView android:id ="@+id/revenue_value"
                          android:layout_height="wrap_content"
                          android:layout_width="wrap_content"
                          android:layout_below="@+id/quantity2_value"
                          android:layout_toRightOf="@+id/revenue"
                          android:text="Revenue Value"
                          />
                <TextView android:id ="@+id/transport2"
                          android:layout_height="wrap_content"
                          android:layout_width="wrap_content"
                          android:layout_below="@+id/revenue"
                          android:text="Transport: "
                          />
                <TextView android:id ="@+id/transport_value2"
                          android:layout_height="wrap_content"
                          android:layout_width="wrap_content"
                          android:layout_below="@+id/revenue_value"
                          android:layout_toRightOf="@+id/transport2"
                          android:text="Transport Value"
                          />
                <TextView android:id ="@+id/transaction_fee2"
                          android:layout_height="wrap_content"
                          android:layout_width="wrap_content"
                          android:layout_below="@+id/transport2"
                          android:text="Transaction Fee: "
                          />
                <TextView android:id ="@+id/transaction_fee_value2"
                          android:layout_height="wrap_content"
                          android:layout_width="wrap_content"
                          android:layout_below="@+id/transport_value2"
                          android:layout_toRightOf="@+id/transaction_fee2"
                          android:text="Transaction Fee"
                          />
                <Button android:layout_height="wrap_content"
                        android:layout_width="150dip"                         
                        android:layout_alignParentBottom="true"
                        android:layout_alignParentLeft="true"
                        android:text="Back"
                        android:id = "@+id/back_find_markets"/>
                       
                 <Button android:layout_height="wrap_content"
                 		android:layout_toRightOf="@+id/back_find_markets"
                        android:layout_width="150dip" 
                        android:layout_alignParentBottom="true"
                        android:layout_alignParentRight="true"
                        android:text="Find Buyer"
                        android:id = "@+id/next_transport_estimate"/>

</RelativeLayout>