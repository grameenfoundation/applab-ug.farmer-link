<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent">
                
                <TextView android:id ="@+id/market"
                          android:layout_height="wrap_content"
                          android:layout_width="wrap_content"
                          android:layout_alignParentTop="true"
                          android:text=""
                          />          
                <TextView android:id ="@+id/market_name"
                          android:layout_height="wrap_content"
                          android:layout_width="wrap_content"
                          android:layout_toRightOf="@+id/market"
                          android:layout_alignParentRight="true"
                          android:text="Market Name"
                          />
                <TextView android:id ="@+id/crop"
                          android:layout_height="wrap_content"
                          android:layout_width="wrap_content"
                          android:layout_below="@+id/market"
                          android:text="Crop: "
                          />
                <TextView android:id ="@+id/crop_name"
                          android:layout_height="wrap_content"
                          android:layout_width="wrap_content"
                          android:layout_below="@+id/market_name"
                          android:layout_alignParentRight="true"
                          android:layout_toRightOf="@+id/crop"
                          android:text="Crop Name"
                          />
                <TextView android:id ="@+id/quantity"
                          android:layout_height="wrap_content"
                          android:layout_width="wrap_content"
                          android:layout_below="@+id/crop"
                          android:text="Quantity: "
                          />
                <TextView android:id ="@+id/quantity_value"
                          android:layout_height="wrap_content"
                          android:layout_width="wrap_content"
                          android:layout_toRightOf="@+id/quantity"
                          android:layout_alignParentRight="true"
                          android:layout_below="@+id/crop_name"
                          android:text="Quantity Value"
                          />
                <TextView android:id ="@+id/kg_price"
                          android:layout_height="wrap_content"
                          android:layout_width="wrap_content"
                          android:layout_below="@+id/quantity"
                          android:text="Price: "
                          />
                <TextView android:id ="@+id/kg_price_value"
                          android:layout_height="wrap_content"
                          android:layout_width="wrap_content"
                          android:layout_toRightOf="@+id/kg_price"
                          android:layout_below="@+id/quantity_value"
                          android:layout_alignParentRight="true"
                          android:text="Price Value"
                          />
                <TextView android:id ="@+id/total"
                          android:layout_height="wrap_content"
                          android:layout_width="wrap_content"
                          android:layout_below="@+id/kg_price"
                          android:text="Total Price: "
                          />
                <TextView android:id ="@+id/total_value"
                          android:layout_height="wrap_content"
                          android:layout_width="wrap_content"
                          android:layout_below="@+id/kg_price_value"
                          android:layout_alignParentRight="true"
                          android:layout_toRightOf="@+id/total"
                          android:text="Total Value"
                          />
                <TextView android:id ="@+id/borderline"
                          android:layout_height="1dp"
                          android:layout_width="fill_parent"
                          android:layout_below="@+id/total_value"
                          android:background="@color/white"
                          android:text=""
                          />
                <ListView android:id="@android:id/list"
                          android:layout_width="fill_parent"
                          android:layout_height="fill_parent"
                          android:layout_margin="2dip"
                          android:layout_below="@+id/borderline"
                          android:layout_above="@+id/confirm_transaction"
                          android:scrollbars="vertical"
                          android:layout_gravity="fill_vertical"
                          android:fadeScrollbars="false"
                          />
                 <CheckBox android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:layout_above="@+id/back_transaction_fee"                        
                        android:layout_alignParentLeft="true"
                        android:text="Confirm Transaction"
                        android:id = "@+id/confirm_transaction"
                        />                        
                 <Button android:layout_height="wrap_content"
                        android:layout_width="150dip"                         
                        android:layout_alignParentBottom="true"
                        android:layout_alignParentLeft="true"
                        android:text="Back"
                        android:id = "@+id/back_transaction_fee"/>
                       
                 <Button android:layout_height="wrap_content"
                 		android:layout_toRightOf="@+id/back_transaction_fee"
                        android:layout_width="150dip" 
                        android:layout_alignParentBottom="true"
                        android:layout_alignParentRight="true"
                        android:text="Next"
                        android:id = "@+id/next_finish"/>

</RelativeLayout>